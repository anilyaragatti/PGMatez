<% layout('layout/boilerplate') -%>

    <div class="form-page">

        <!-- PROFILE HEADER -->
        <div class="form-card" style="text-align: center; padding: 28px 20px;">
            <div
                style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--brand-color), #ff8fab); border-radius: 50%; margin: 0 auto 16px; display: flex; align-items: center; justify-content: center; font-size: 32px; color: #fff;">
                <i class="fa-solid fa-user"></i>
            </div>

            <h2 style="margin: 0 0 4px; font-size: 20px; font-weight: 700; color: var(--text-dark);">
                <%= user.name %>
            </h2>
            <p style="margin: 0 0 4px; font-size: 14px; color: #6b7280;">
                <%= user.email %>
            </p>
            <% const badgeBg=user.role==='owner' ? '#fef3c7' : '#dbeafe' ; const badgeColor=user.role==='owner'
                ? '#92400e' : '#1e40af' ; const badgeText=user.role==='owner' ? 'ðŸ  Owner' : 'ðŸŽ“ Tenant' ; %>
                <span
                    style="display: inline-block; margin-top: 8px; padding: 4px 14px; border-radius: 20px; font-size: 13px; font-weight: 600; background: <%= badgeBg %>; color: <%= badgeColor %>;">
                    <%= badgeText %>
                </span>

                <div style="margin-top: 16px;">
                    <a href="/users/<%= user._id %>/edit" class="secondary-btn"
                        style="display: inline-block; text-decoration: none; padding: 10px 28px; width: auto;">
                        <i class="fa-solid fa-pen" style="margin-right: 6px;"></i> Edit Profile
                    </a>
                </div>
        </div>


        <!-- DETAILS -->
        <div class="form-card" style="margin-top: 16px;">
            <h3 class="form-section-title">Details</h3>

            <div class="detail-row"
                style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #f3f4f6;">
                <span style="font-size: 14px; color: #6b7280;">Phone</span>
                <span style="font-size: 14px; font-weight: 600; color: var(--text-dark);">
                    <%= user.phone || 'Not provided' %>
                </span>
            </div>

            <div class="detail-row"
                style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #f3f4f6;">
                <span style="font-size: 14px; color: #6b7280;">Role</span>
                <span style="font-size: 14px; font-weight: 600; color: var(--text-dark); text-transform: capitalize;">
                    <%= user.role %>
                </span>
            </div>

            <div class="detail-row" style="display: flex; justify-content: space-between; padding: 12px 0;">
                <span style="font-size: 14px; color: #6b7280;">Joined</span>
                <span style="font-size: 14px; font-weight: 600; color: var(--text-dark);">
                    <%= user.createdAt.toLocaleDateString('en-IN', { day: 'numeric' , month: 'short' , year: 'numeric'
                        }) %>
                </span>
            </div>
        </div>


        <!-- BIO -->
        <% if (user.bio) { %>
            <div class="form-card" style="margin-top: 16px;">
                <h3 class="form-section-title">Bio</h3>
                <p style="font-size: 14px; color: #374151; line-height: 1.6; margin: 0;">
                    <%= user.bio %>
                </p>
            </div>
            <% } %>


                <!-- QUICK ACTIONS -->
                <div class="form-card" style="margin-top: 16px;">
                    <div class="detail-row" style="padding: 14px 0; border-bottom: 1px solid #f3f4f6; cursor: pointer;">
                        <a href="/users/<%= user._id %>/edit"
                            style="text-decoration: none; color: #374151; display: flex; align-items: center; gap: 10px;">
                            <i class="fa-solid fa-gear" style="color: #6b7280;"></i>
                            <span style="font-size: 14px; font-weight: 500;">Edit Profile</span>
                        </a>
                    </div>
                    <div class="detail-row" style="padding: 14px 0; border-bottom: 1px solid #f3f4f6; cursor: pointer;">
                        <span style="font-size: 14px; color: #374151; display: flex; align-items: center; gap: 10px;">
                            <i class="fa-solid fa-circle-info" style="color: #6b7280;"></i>
                            Help & Support
                        </span>
                    </div>
                    <div class="detail-row" style="padding: 14px 0; cursor: pointer;">
                        <span style="font-size: 14px; color: #ef4444; display: flex; align-items: center; gap: 10px;">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            Logout
                        </span>
                    </div>
                </div>

    </div>