 <% layout('layout/boilerplate') -%>

<div class="form-page">

  <!-- PAGE TITLE -->
  <h2 class="page-title">Create New PG</h2>

  <form action="/listing" method="POST" class="pg-form">

    <!-- BASIC DETAILS -->
    <div class="form-card">
      <h3 class="form-section-title">Basic Details</h3>

      <div class="form-group">
        <label>PG Title </label>
        <input type="text" name="title" placeholder="e.g. Sunrise Boys PG" required>
      </div>

      <div class="form-group">
        <label>Description </label>
        <textarea name="description" rows="3"
          placeholder="Short description about the PG" required></textarea>
      </div>

      <div class="form-group">
        <label>Gender </label>
        <div class="option-row">
          <label><input type="radio" name="gender" value="Male" required> Male</label>
          <label><input type="radio" name="gender" value="Female"> Female</label>
          <label><input type="radio" name="gender" value="Any"> Any</label>
        </div>
      </div>

      <div class="form-group">
        <label>Preferred For</label>
        <div class="option-row">
          <label>
            <input type="checkbox" name="preferredFor[]" value="Students">
            Students
          </label>
          <label>
            <input type="checkbox" name="preferredFor[]" value="Working Professionals">
            Working Professionals
          </label>
        </div>
      </div>
    </div>

    <!-- LOCATION -->
    <div class="form-card">
      <h3 class="form-section-title">Location</h3>

      <div class="form-group">
        <label>City </label>
        <input type="text" name="location[city]" placeholder="City name" required>
      </div>

      <div class="form-group">
        <label>Area </label>
        <input type="text" name="location[area]" placeholder="Area / Locality" required>
      </div>

      <div class="form-group">
        <label>Landmark</label>
        <input type="text" name="location[landmark]" placeholder="Nearby landmark">
      </div>
    </div>

    <!-- NEXT BUTTON -->
    <button type="submit" class="primary-btn">
      Save & Continue
    </button>





    <!-- IMAGES -->
<div class="form-card">
  <h3 class="form-section-title">PG Images</h3>

  <div id="imageInputs">
    <div class="form-group">
      <input 
        type="url" 
        name="images[]" 
        placeholder="Paste image URL"
      >
    </div>
  </div>

  <button type="button" class="secondary-btn" id="addImageBtn">
    + Add another image
  </button>

  <p class="hint-text">
    You can add up to 10 images
  </p>
</div>


  </form>
</div>



<style>
    /* ================= CREATE PAGE ================= */

.form-page {
  padding: 12px;
}

/* Page title */
.page-title {
  margin: 0 0 12px;
  font-size: 18px;
  font-weight: 700;
  color: #111827;
}

/* Form wrapper */
.pg-form {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* Card */
.form-card {
  background: #ffffff;
  border-radius: 14px;
  padding: 12px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.08);
}

/* Section title */
.form-section-title {
  margin: 0 0 10px;
  font-size: 15px;
  font-weight: 700;
  color: #111827;
}

/* Form group */
.form-group {
  display: flex;
  flex-direction: column;
  gap: 6px;
  margin-bottom: 10px;
}

.form-group:last-child {
  margin-bottom: 0;
}

/* Labels */
.form-group label {
  font-size: 13px;
  font-weight: 600;
  color: #374151;
}

/* Inputs */
.form-group input,
.form-group textarea {
  padding: 10px;
  font-size: 14px;
  border-radius: 10px;
  border: 1px solid #e5e7eb;
  outline: none;
  background: #ffffff;
}

.form-group input:focus,
.form-group textarea:focus {
  border-color: #ff5a7a;
}

/* Radio & checkbox row */
.option-row {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
}

.option-row label {
  font-size: 13px;
  color: #374151;
  display: flex;
  align-items: center;
  gap: 6px;
}

/* Submit button */
.primary-btn {
  margin-top: 8px;
  padding: 12px;
  border-radius: 14px;
  border: none;
  background: #ff5a7a;
  color: #ffffff;
  font-size: 15px;
  font-weight: 700;
  cursor: pointer;
}

/* Image add button */
.secondary-btn {
  margin-top: 6px;
  padding: 10px;
  border-radius: 12px;
  border: 1px dashed #ff5a7a;
  background: #fff;
  color: #ff5a7a;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
}

/* Helper text */
.hint-text {
  margin-top: 6px;
  font-size: 12px;
  color: #6b7280;
}



</style>



    <script>
  const addImageBtn = document.getElementById("addImageBtn");
  const imageInputs = document.getElementById("imageInputs");

  let imageCount = 1;
  const MAX_IMAGES = 10;

  addImageBtn.addEventListener("click", () => {
    if (imageCount >= MAX_IMAGES) {
      alert("You can add maximum 10 images");
      return;
    }

    const div = document.createElement("div");
    div.className = "form-group";
    div.innerHTML = `
      <input 
        type="url" 
        name="images[]" 
        placeholder="Paste image URL"
      >
    `;

    imageInputs.appendChild(div);
    imageCount++;
  });
</script>

