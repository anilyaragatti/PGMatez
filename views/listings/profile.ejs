<% layout('layout/boilerplate') -%>

    <div class="container">
        <div class="page-title" style="text-align: left; margin-top: 10px; margin-bottom: 20px;">
            My Profile
        </div>

        <div class="pg-card" style="padding: 20px; text-align: center;">
            <div
                style="width: 80px; height: 80px; background: #f3f4f6; border-radius: 50%; margin: 0 auto 16px; display: flex; align-items: center; justify-content: center; font-size: 32px; color: #9ca3af;">
                <i class="fa-solid fa-user"></i>
            </div>

            <h3 style="margin: 0; font-size: 18px; color: #111827;">Guest User</h3>
            <p style="margin: 4px 0 16px; font-size: 14px; color: #6b7280;">guest@pgmatez.com</p>

            <button class="secondary-btn" style="width: 100%; max-width: 200px; margin: 0 auto;">Edit Profile</button>
        </div>

        <div class="pg-section-card" style="margin-top: 20px;">
            <div class="detail-row" style="cursor: pointer;">
                <span class="detail-label"><i class="fa-solid fa-gear" style="margin-right: 8px;"></i> Settings</span>
                <i class="fa-solid fa-chevron-right" style="font-size: 12px; color: #9ca3af;"></i>
            </div>
            <div class="detail-row" style="cursor: pointer;">
                <span class="detail-label"><i class="fa-solid fa-circle-info" style="margin-right: 8px;"></i> Help &
                    Support</span>
                <i class="fa-solid fa-chevron-right" style="font-size: 12px; color: #9ca3af;"></i>
            </div>
            <div class="detail-row" style="border-bottom: none; cursor: pointer;">
                <span class="detail-label" style="color: #ef4444;"><i class="fa-solid fa-right-from-bracket"
                        style="margin-right: 8px;"></i> Logout</span>
            </div>
        </div>
    </div>